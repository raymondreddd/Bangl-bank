<%- include('./partials/header') %>

<div class="container ">
    <% cust.forEach((c)=>{ %> 
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-6 col-lg-8">
                    <div class="card-body pb-1 pb-sm-0">
                        <h5 class="card-title" style="text-transform: capitalize;">
                            <b><%= c.name %></b>
                        </h5>
                        <p class="card-text">
                            <%= c.balance %>
                        </p>
                        <a class="btn btn-info btn-sm" href="/pay/<%= c._id %>">View Details & Transfer Money</a>
                    </div>
                </div>
            </div>
        </div>
    
    <% }) %>
</div>

    <%- include('./partials/footer') %>